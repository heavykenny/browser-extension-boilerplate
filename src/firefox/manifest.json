{
  "manifest_version": 2,
  "name": "Awesome Extension",
  "version": "1.0",
  "description": "A simple browser extension that does awesome things.",
  "permissions": [
    "storage",
    "identity"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-38.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-38.png",
    "128": "icons/icon-128.png"
  }
}
